package LinkedList;

public class CircularLinkedList<T extends Comparable<T>> {
	Node<T> tail;
	
	public void addToFront (T data) {
		Node n = new Node(data);
		if (tail == null) {
			
			n.next = tail;
			tail = n;
		}
		else {
			n.next = tail.next;
			tail.next = n;
		}
	}
	
	public void addToRear (T data) {
		Node n = new Node(data);
		if (tail == null) {
			
			n.next = tail;
			tail = n;
		}
		else {
			n.next = tail.next;
			tail.next = n;
			tail = n;
		}
	}
}
