package Stack;

public class SyntaxChecker {
	public static void main(String[] args) {
		System.out.println(parenMatch("{[]()"));
	}
	
	public static boolean parenMatch(String str) {
		Stack<Character> s = new Stack<Character>();
		
		for (int i = 0; i < str.length(); i++) {
			char x = str.charAt(i);
			if (x == '(' || x == '[' || x == '{') {
				s.push(x);
				continue;
			}
			else {
				if (s.isEmpty()) return false;
				
				char c = s.pop();
				
				
				if (c == ')' && x == '(' 
						|| c == ']' && x == '['
						|| c == '}' && x == '{') {
					continue;
				}
				/*
				if (str.charAt(i) == ')'){
					char cur = s.pop();
					if (cur == '(') 
						continue;
					else
						return false;
					
				}
				if (str.charAt(i) == ']') {
					char cur = s.pop();
					if (cur == '[') 
						continue;
					else
						return false;
				}
				
				if (str.charAt(i) == '}') {
					char cur = s.pop();
					if (cur == '{') 
						continue;
					else 
						return false;
				}
				*/
				
			}
		}
		if (s.isEmpty())
			return true;
		return false;
	}
}
